<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Check IT!</h2>
        <form class="clearfix mb-4" action="/api/process-form" method='POST'>
          <div class="form-group">
            <label for="example-text">Name</label>
            <input name='author' type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Your Name Here...">
          </div>
          <div class="form-group">
            <label for="example-description">Category</label>
            <textarea name='category'class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Category..."></textarea>
          </div>
            <div class="form-group">
            <label for="example-description">Name</label>
            <textarea name='category'class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Category..."></textarea>
          </div>
           <div class="form-group">
            <label for="example-description">Task Description</label>
            <textarea name='task'class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Task..."></textarea>
          </div>
            <div class="form-group">
            <label for="example-description">Due Date</label>
            <textarea name='task'class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Task..."></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

        <h3>My to-do list:</h3>
        <ul id="task-list" class="list-group">
          {{#each toDoList}}
          <li>{{name}}</li>
          <li>{{description}}</li>
          <li>{{due}}</li>
          <li>{{completed}}</li>
          
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>



