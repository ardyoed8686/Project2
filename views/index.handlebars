                <li>{{name}}</li>
                <li>{{type}}</li>
                <li>{{title}}</li>
                <li>{{description}}</li>
                <li>{{due}}</li>
                <button id="{{id}}" type="button" class="btn btn-danger delete">X</button>
              </ul>
              {{!-- <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a> --}}
